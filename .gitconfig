[user]
  name = wencakisa
  email = wencakisa@gmail.com

[core]
  excludesfile = ~/.gitignore_global
  editor = nvim

[push]
  default = current

[init]
  defaultBranch = master

[blame]
  date = format:"%d/%m/%Y [%H:%M]"

[alias]
  undo = reset --soft HEAD^
  amend = commit --amend
  unstage = reset HEAD

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
